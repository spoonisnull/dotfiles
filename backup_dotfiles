# update all dotfiles in dropbox
cp ~/.bashrc Dropbox/dotfiles/ &&
cp ~/.tmux.conf Dropbox/dotfiles/ &&
cp ~/.vimrc Dropbox/dotfiles/ &&
cp /bin/backup_dotfiles Dropbox/dotfiles/ &&

# commit & push changes to github dotfiles repo
cd Dropbox/dotfiles &&
git commit .bashrc .tmux.conf .vimrc backup_dotfiles -m "updated dotfiles" &&
git push

