set $mod Mod1
set $mod4 Mod4

font pango:Input Mono Medium 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# fibonacci layout
for_window [class=".*"] split toggle

gaps inner 10
gaps outer 20

set $base0B #ffcc66
set $base00 #2d2d2d
set $base04 #a09f93
set $base0B #99cc99

# class                 border  backgr. text    indicator child_border
client.focused          $base0B $base00 $base04 $base0B $base0B  
client.unfocused        $base00 $base00 $base00 $base00 $base00  
client.focused_inactive $base00 $base00 $base00 $base00 $base00  
client.urgent           $base0B $base00 $base04 $base0B $base0B  

bar {
    status_command ~/.i3status.sh
    tray_output primary
    output DP-1
# hide workspace names
    workspace_buttons no
    colors {
    background $base00  
    }
}

new_window normal
hide_edge_borders vertical 
new_window pixel 2

## Volume control
set $volumepath ~/Apps/i3-volume
set $statuscmd i3status
set $statussig SIGUSR1
set $volumestep 5
bindsym XF86AudioRaiseVolume exec $volumepath/volume -i $volumestep -n -t $statuscmd -u $statussig
bindsym XF86AudioLowerVolume exec $volumepath/volume -d $volumestep -n -t $statuscmd -u $statussig
bindsym XF86AudioMute exec $volumepath/volume -m -n -t $statuscmd -u $statussig

# media controls
bindsym XF86AudioPlay exec mpcplay
bindsym XF86AudioStop exec mpcpause
bindsym XF86AudioPrev exec mpcprev
bindsym XF86AudioNext exec mpcnext

# resize window (you can also use the mouse for that)
mode "resize" {
# These bindings trigger as soon as you enter the resize mode

  bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

# back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# autorun
exec ~/.screenlayout/i3_four_monitors.sh
exec --no-startup-id nitrogen --restore
exec nm-applet
exec shutter --min_at_startup
exec /opt/urserver/urserver-start --no-manager --no-notify
exec redshift-gtk
exec dbus-launch dropbox stop && dbus-launch dropbox start
exec caffeine-indicator
exec mopidy
exec xautolock -time 60 -locker 'fuzzy_lock.sh' &

bindsym $mod+Return exec st
bindsym $mod+w kill
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod4+h move left
bindsym $mod4+j move down
bindsym $mod4+k move up
bindsym $mod4+l move right
bindsym $mod4+- split h
bindsym $mod4+\ split v
bindsym $mod+f fullscreen toggle
# bindsym $mod+s layout stacking
# bindsym $mod+t layout tabbed
# bindsym $mod+s layout toggle split
bindsym $mod4+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop
bindsym $mod+1 focus output DP-1-1
bindsym $mod+2 focus output DVI-D-0
bindsym $mod+3 focus output DP-1
bindsym $mod+4 focus output HDMI-0
bindsym $mod4+1 move container to output DP-1-1
bindsym $mod4+2 move container to output DVI-D-0
bindsym $mod4+3 move container to output DP-1
bindsym $mod4+4 move container to output HDMI-0
bindsym $mod+Shift+c reload
bindsym $mod4+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+r mode "resize"
bindsym $mod+e exec "pcmanfm"
bindsym Print exec "shutter -s"
bindsym $mod+F1 exec "google-chrome"
