# update all config files in dropbox
cp ~/.bashrc ~/Dropbox/dotfiles/ &&
cp ~/.tmux.conf ~/Dropbox/dotfiles/ &&
cp ~/.vimrc ~/Dropbox/dotfiles/ &&
cp /bin/backup_configs ~/Dropbox/dotfiles/ &&
cp ~/.newsbeuter/urls ~/Dropbox/dotfiles/ &&



# add, commit & push all files
cd ~/Dropbox/dotfiles &&
git add -A &&
git commit -am "updated config/dotfiles" &&
git push

