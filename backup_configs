# update all config files in dropbox
cp /bin/backup_configs ~/Dropbox/dotfiles/ &&
cp /bin/overwrite_configs ~/Dropbox/dotfiles/ &&
cp ~/.bashrc ~/Dropbox/dotfiles/ &&
cp ~/.zshrc ~/Dropbox/dotfiles/ &&
cp ~/.tmux.conf ~/Dropbox/dotfiles/ &&
cp ~/.vimrc ~/Dropbox/dotfiles/ &&
cp ~/.newsbeuter/urls ~/Dropbox/dotfiles/ &&
cp ~/.newsbeuter/config ~/Dropbox/dotfiles/ &&
cp ~/.oh-my-zsh/oh-my-zsh.sh ~/Dropbox/dotfiles/ &&

if [ `hostname` = "kraken" ]; then
    cp ~/.config/terminator/config ~/Dropbox/dotfiles/k_terminator_config
else
    cp ~/.config/terminator/config ~/Dropbox/dotfiles/t_terminator_config
fi

# add, commit & push all files
cd ~/Dropbox/dotfiles &&
git add -A &&
git commit -am "updated config/dotfiles" &&
git push

